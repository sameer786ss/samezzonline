---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
---

<Layout metadata={{ title: 'Forgot Password' }}>
  <HeroText tagline="Forgot Password" title="Reset Your Password" />
  <div
    class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-gray-200 dark:border-gray-700 bg-white dark:bg-slate-900 shadow p-4 sm:p-6 lg:p-8 w-full"
  >
    <div id="forgot-password-form-container">
      <form id="forgot-password-form">
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300"
            >Enter your email to reset your password</label
          >
          <input
            type="email"
            id="email"
            name="email"
            required
            class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm dark:bg-slate-800 dark:border-gray-600 dark:text-white"
          />
        </div>
        <div id="message" class="hidden text-sm mb-4"></div>
        <button
          type="submit"
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >Send Reset Link</button
        >
      </form>
    </div>
    <p class="text-center text-sm text-gray-500 mt-4">
      <a href="/login" class="text-blue-600 hover:underline dark:text-blue-400">Back to Login</a>
    </p>
  </div>
</Layout>

<script type="module">
  import { auth } from '../../firebase/firebase';
  import { sendPasswordResetEmail } from 'firebase/auth';

  const form = document.querySelector('#forgot-password-form');
  const message = document.querySelector('#message');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    message.classList.add('hidden');

    const email = form.email.value;

    if (!email) {
      message.textContent = 'Please enter your email address.';
      message.classList.remove('hidden', 'text-green-500');
      message.classList.add('text-red-500');
      return;
    }

    try {
      await sendPasswordResetEmail(auth, email);
      message.textContent = 'Password reset email sent! Please check your inbox.';
      message.classList.remove('hidden', 'text-red-500');
      message.classList.add('text-green-500');
    } catch (error) {
      console.error('Error sending password reset email:', error);
      message.textContent = 'Failed to send password reset email. Please try again.';
      message.classList.remove('hidden', 'text-green-500');
      message.classList.add('text-red-500');
    }
  });
</script>
